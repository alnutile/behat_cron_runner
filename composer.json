{
    "name": "drupal/behat_cron_runner",
    "type": "drupal-module",
    "description": "Runs @critical behat tests at cron time.",
    "homepage": "https://github.com/alnutile/behat_cron_runner",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Alfred Nutile",
            "email": "alfrednutile@gmail.com",
            "role": "The guy behind the keyboard"
        }
    ],
    "support": {
        "issues": "https://github.com/alnutile/behat_cron_runner/issues"
    },
    "require": {
        "behat/behat": "2.5.3",
        "behat/mink-zombie-driver": "*",
        "alnutile/behat-wrapper": "dev-master",
        "alnutile/business-selector-extension": "dev-master",
        "behat/mink": "dev-FindWindowNames as 1.5.x-dev",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium-driver": "*",
        "behat/mink-selenium2-driver": "dev-FindWindowNamesInSelenium2",
        "behat/mink-extension": "dev-CommandTimeout",
        "behat/mink-sahi-driver": "*",
        "drupal/drupal-extension": "*",
        "symfony/finder": "2.5.*",
        "symfony/filesystem": "2.5.*",
        "symfony/process": "2.3.*",
        "symfony/event-dispatcher": "2.5.*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*@dev",
        "mikey179/vfsStream": "1.3.*@dev",
        "mockery/mockery": "0.9.*@dev",
        "fzaninotto/faker": "1.4.*@dev"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/pthurmond/Mink.git"
        },
        {
            "type": "git",
            "url": "https://github.com/pthurmond/MinkSelenium2Driver.git"
        },
        {
            "type": "git",
            "url": "https://github.com/alnutile/MinkExtension.git"
        }
    ],
    "autoload": {
        "psr-0": {
            "Drupal\\BehatRunner": "src/"
        }
    }
}

